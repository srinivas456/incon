    <%= f.label :version %><br />
    <%= f.number_field :version %>
  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%= f.radio_button(:type, "Navi-Based") %>
    <%= f.radio_button(:type, "Tab-Based") %>
    <%= f.radio_button(:type, "View-Based") %>
  </div>
  <div class="field">
    <%= f.label :device_type %><br />
    <%= f.text_field :device_type %>
  </div>
  <div class="field">
    <%= f.label :application_name %><br />
    <%= f.text_field :application_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
